<resources>
    <!-- Base application theme. -->
    <style name="Theme.ToDosApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white_lotion</item>
        <item name="android:windowLightStatusBar">@color/black</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="actionOverflowMenuStyle">@style/popUpOverflowMenu</item>
        <item name="android:itemTextAppearance">@style/textPopUpMenuOverflow</item>
        <item name="bottomSheetDialogTheme">@style/CustomBottomSheetDialog</item>

        <!-- Customize your theme here. -->
    </style>

    <!--Custom title text for toolbar-->
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <!--Custom pop up menu overflow-->
    <style name="popUpOverflowMenu" parent="@style/Widget.MaterialComponents.PopupMenu.Overflow">
        <item name="android:popupBackground">@drawable/background_pop_menu_radius</item>
    </style>

    <!--Custom text on pop up menu overflow-->
    <style name="textPopUpMenuOverflow">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/dark_gunmetal</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--Custom DatePicker Deadline-->
    <style name="ThemeOverlay.App.DatePicker" parent="@style/ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="colorPrimary">@color/red_pink</item>
        <item name="colorOnPrimary">@color/dark_gunmetal</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.App.MediumComponent
        </item>
    </style>

    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerSize">16dp</item>
    </style>

    <!--Custom for Drop down menu-->
    <style name="Widget.App.ExposedDropdownMenu" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="hintTextColor">@color/joust_blue</item>
        <item name="endIconTint">@color/joust_blue</item>
    </style>

    <!--Custom for checkboxes-->
    <style name="Widget.App.CheckBox" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="buttonTint">@color/minty_green</item>
    </style>

    <!--Custom for BottomSheetDialog-->
    <style name="CustomBottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheet</item>
    </style>

    <style name="CustomBottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/CustomShapeAppearanceBottomSheetDialog</item>
    </style>

    <style name="CustomShapeAppearanceBottomSheetDialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>
</resources>